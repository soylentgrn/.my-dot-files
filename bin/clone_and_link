#!/bin/bash
pushd "$HOME"

  if [ -d ".dot-files" ]; then
    pushd ".dot-files"
      # Check if git-smart installed and not using jruby
      if `gem list -l git-smart | grep -q git-smart` && ! `ruby --version | grep -q jruby`; then
        git smart-pull
      else
        git fetch
        git pull --ff-only
      fi
    popd
  else
    git clone "git://github.com/soylentgrn/dot-files.git" ".dot-files"
  fi

  ls -1d .dot-files/files/* .dot-files/files/.* | while read f; do
    [ "$f" == '.dot-files/files/.' ] ||
    [ "$f" == '.dot-files/files/..' ] ||
    ln -vsf "$f" .
  done

popd
