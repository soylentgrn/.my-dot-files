#!/bin/bash
VMPATH="/Users/msean/Documents/Virtual Machines/"

if [ "$1" == "puppet" ]
  then
    vmrun start "${VMPATH}/Puppet-master.vmwarevm/Puppet-master.vmx"
    vmrun start "${VMPATH}/Puppet-agent.vmwarevm/Puppet-agent.vmx"
    vmrun start "${VMPATH}/Puppet-CentOS-7.vmwarevm/Puppet-CentOS-7.vmx"
  elif [ "$1" == "zed" ]
    vmrun start "${VMPATH}/zed.vmwarevm/zed.vmx"
    vmrun start "${VMPATH}/Target-1.vmwarevm/Target-1.vmx"
    vmrun start "${VMPATH}/Target-2.vmwarevm/Target-2.vmx"
  else
    echo "Invalid VM group"
fi
